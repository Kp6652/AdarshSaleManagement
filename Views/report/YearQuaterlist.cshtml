@using System.Data
@model DataSet

@{
    ViewData["Title"] = "list";
    Layout =null;
}

 <style>
     th, td {
  text-align:center;
}
tr:hover{
  background: #15b6b7;
  box-shadow: 0px 2px 35px -5px #15b6b7;
  cursor: pointer;
  color:#ffffff;
}
tr:focus {
  outline: none;
}
 </style>
<div class="table-responsive">
 

<table class="table table-bordered display nowrap" style="border:2px double #b0e0e6" id="#quaterly">
    <thead class="bg-secondary bg-gradient text-light" style="text-align:center">
        <tr>
             
            <th>
                Client
            </th>
            <th>
                Q1
            </th>
             <th>
                Q2
            </th>
            <th>
                Q3
            </th>
            <th>
                Q4
            </th>
             <th>
                Grand Total
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (DataRow dr in Model.Tables[0].Rows) {
        <tr>
           
             
            <td>
                @dr["companyName"]
            </td>
            <td>
                @((decimal)dr["Jan"] +(decimal)dr["Feb"]+(decimal)dr["Mar"] )
            </td>
            <td>
                @((decimal)dr["Apr"] +(decimal)dr["May"]+(decimal)dr["June"])
            </td>
            <td>
                @( (decimal)dr["Jul"]+(decimal)dr["Aug"]+(decimal)dr["Sep"])
            </td>
            <td>
                @((decimal)dr["Oct"]+(decimal)dr["Nov"]+(decimal)dr["Dec"])
            </td>
            <td>
                @dr["G_total"]
            </td>
       </tr>

}

@if(Model.Tables[0].Rows.Count==0)
{
    <tr>
        <td colspan="6" class=" border-warning"> No Data</td>
    </tr>
}
    </tbody>
</table>

</div>
<style rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" ></style>
<style rel="stylesheet" href="https://cdn.datatables.net/buttons/2.1.0/css/buttons.dataTables.min.css" ></style>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>
<script>


    $(document).ready( function () {
    $('#quaterly').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    } )
} );

      


</script>